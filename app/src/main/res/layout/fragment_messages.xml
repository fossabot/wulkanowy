<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.wulkanowy.ui.main.messages.DialogsFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/messages_fragment_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.stfalcon.chatkit.dialogs.DialogsList
            app:dialogTitleTextColor="?android:attr/android:textColorPrimary"
            app:dialogAvatarWidth="0dp"
            app:dialogAvatarHeight="55dp"
            app:dialogDividerColor="?android:attr/android:windowBackground"
            app:dialogDividerLeftPadding="0dp"
            android:id="@+id/dialogsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>
